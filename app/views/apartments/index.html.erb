<p id="notice"><%= notice %></p>

<h1><%= Apartment.model_name.human + t('.index') %></h1>

<table>
  <thead>
    <tr>
      <th><%= Apartment.human_attribute_name :name %></th>
      <th><%= Apartment.human_attribute_name :rent %></th>
      <th><%= Apartment.human_attribute_name :address %></th>
      <th><%= Apartment.human_attribute_name :building_age %></th>
      <th><%= Apartment.human_attribute_name :note %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.name %></td>
        <td><%= number_to_currency apartment.rent %></td>
        <td><%= apartment.address %></td>
        <td><%= apartment.building_age %></td>
        <td><%= apartment.note %></td>
        <td><%= link_to t('helpers.action.show'), apartment %></td>
        <td><%= link_to t('helpers.action.edit'), edit_apartment_path(apartment) %></td>
        <td><%= link_to t('helpers.action.destroy'), apartment, method: :delete, data: { confirm: t('helpers.confirm.delete') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.submit'), new_apartment_path %>
